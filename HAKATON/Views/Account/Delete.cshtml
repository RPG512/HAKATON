@model LoginViewModel
@{
	ViewData["Title"] = "Удаление аккаунта";
}
<div class="row d-flex align-items-center justify-content-center">
	<div class="col-md-3 card p-3">
		<h2 class="text-center text-danger">Вы уверены, что хотите удалить аккаунт?</h2>
		<form asp-action="Delete" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-1">
				<label asp-for="UserName"></label>
				<input asp-for="UserName" class="form-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
			<div class="mb-1">
				<label asp-for="Password"></label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="row">
				<div class="col-6">
					<a href="/" class="float-start mt-2 btn btn-sm float-start">Отмена</a>
				</div>
				<div class="col-6">
					<input type="submit" value="Удалить аккаунт" class="text-danger btn btn-sm float-end mt-2" />
				</div>
			</div>
		</form>
	</div>
</div>